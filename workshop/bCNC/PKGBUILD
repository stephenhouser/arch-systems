pkgname=bCNC
pkgver=0.9.14.304
pkgrel=1
pkgdesc="GRBL CNC command sender, autoleveler and g-code editor"
arch=('any')
url="https://github.com/vlachoudis/bCNC"
license=(GPL2)
depends=(python python-pipx)
makedepends=(git)
provides=("${pkgname%}")
source=(bCNC
        bCNC.png
        bCNC.desktop
        bCNC.install)
md5sums=('fe1c7a1cd0e50c838e113f8720183904'
         '644f4e126e3f23c4408e3c629af5fa22'
         'df0b23aec81fdf3ada89efd7167c2edb'
         'd56cb49a099d016645344606c2856969')

install=${pkgname}.install

build() {
  cd "${srcdir}"
}

package() {
  install -D -m755 "${pkgname}" "${pkgdir}/usr/bin/${pkgname}"
  install -D -m644 "${pkgname}.desktop" "${pkgdir}/usr/share/applications/${pkgname}.desktop"
  install -D -m644 "${pkgname}.png" "${pkgdir}/usr/share/pixmaps/${pkgname}.png"  
}


